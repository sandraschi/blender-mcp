{
  "manifest_version": "0.2",
  "name": "blender-mcp",
  "version": "1.0.0",
  "description": "Complete Blender 3D automation MCP server",
  "author": {
    "name": "Blender MCP Team",
    "email": "blender-mcp@example.com"
  },
  "server": {
    "type": "python",
    "entry_point": "src/blender_mcp/__main__.py",
    "mcp_config": {
      "command": "python",
      "args": ["-m", "blender_mcp"],
      "env": {
        "PYTHONPATH": "${CWD}/src",
        "BLENDER_EXECUTABLE": "${user_config.blender_executable}"
      }
    }
  },
  "user_config": {
    "blender_executable": {
      "type": "file",
      "title": "Blender Executable",
      "description": "Path to Blender executable",
      "default": "C:\\Program Files\\Blender Foundation\\Blender 4.4\\blender.exe",
      "required": true
    }
  }
}
