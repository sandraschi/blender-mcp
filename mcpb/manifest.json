{
  "manifest_version": "0.2",
  "name": "blender-mcp",
  "version": "0.1.0",
  "description": "MCP server for Blender 3D creation and manipulation",
  "author": {
    "name": "Sandra Schi",
    "email": "sandra@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sandraschi/blender-mcp"
  },
  "server": {
    "type": "python",
    "entry_point": "src/blender_mcp/server.py",
    "mcp_config": {
      "command": "python",
      "args": ["src/blender_mcp/server.py"],
      "env": {
        "PYTHONPATH": "${__dirname}/src",
        "PYTHONUNBUFFERED": "1"
      }
    }
  }
}